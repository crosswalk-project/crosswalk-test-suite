{
  "pkg-blacklist": [
    "pack.py",
    "testcase.xsl",
    "testresult.xsl",
    "tests.css",
    "icon.png",
    "suite.json",
    "inst.*"
  ],
  "pkg-list": {
    "apk,cordova": {
      "blacklist": [
        "*"
      ],
      "copylist": {
        "google/iapdemo.keystore": "iapdemo.keystore",
        "inst.apk.py": "inst.py",
        "tests.full.xml": "tests.full.xml",
        "tests.xml": "tests.xml"
      },
      "subapp-list": {
        "google": {
          "apk-common-opts": "--enable-remote-debugging",
          "apk-type": "MANIFEST",
          "blacklist": [
            "*",
            ".git"
          ],
          "copylist": {            
            "manifest.json": "manifest.json",
            "../index.html": "index.html",
            "../tests.xml": "tests.xml",
            "../iap": "iap",          
            "options.js": "iap/options.js",
            "PACK-TOOL-ROOT/resources/testharness": "resources",
            "PACK-TOOL-ROOT/resources/webrunner": "webrunner"
          }                 
        },
        "xiaomi": {
          "apk-common-opts": "--enable-remote-debugging",        
          "apk-type": "MANIFEST",
          "blacklist": [
            "*",
            ".git"
          ],
          "copylist": {
            "manifest.json": "manifest.json",
            "../index.html": "index.html",
            "../tests.xml": "tests.xml",            
            "../iap": "iap",
            "options.js": "iap/options.js",
            "PACK-TOOL-ROOT/resources/testharness": "resources",
            "PACK-TOOL-ROOT/resources/webrunner": "webrunner"
          }                     
        }
      }

    },
    "apk-aio, cordova-aio": {
      "blacklist": [],
      "copylist": {
        "PACK-TOOL-ROOT/resources/testharness": "resources",
        "PACK-TOOL-ROOT/resources/webrunner": "webrunner"
      }
    }
  },
  "pkg-name": "webapi-iap-xwalk-tests"
}
