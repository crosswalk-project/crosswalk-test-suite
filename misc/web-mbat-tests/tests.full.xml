<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite name="web-mbat-tests" category="mbat" launcher="xwalk">
    <set name="mbat" type="js">
      <testcase purpose="Validate Crosswalk install is successfull" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Binary_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is push device.
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_Binary_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk unistall successfull" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Binary_Uninstall">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_Binary_Uninstall.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk tec install is successfull" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_tec_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is push device.
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_tec_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk tec unistall successfull" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_tec_Uninstall">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_tec_Uninstall.html</test_script_entry>
        </description>
      </testcase>

      <testcase purpose="Validate if Crosswalk support launch url" type="Functional" status="approved" component="Integration with Tizen System" execution_type="manual" priority="P0" id="Crosswalk_Launch_URL">
        <description>
          <pre_condition>
            1. Make sure Crosswalk application is launched and the device connected to network
          </pre_condition>
          <post_condition/>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_Launch_URL.html </test_script_entry>
        </description>
      </testcase>
      
      <testcase purpose="Validate if Crosswalk support to install Widget" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P0" id="Crosswalk_WebApp_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk support that web app could be launched successfully" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P0" id="Crosswalk_WebApp_Launch">
        <description>
          <pre_condition>
            1.Make sure Crosswalk application is launched
            2.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Launch.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support to update WebApp" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P0" id="Crosswalk_WebApp_Update">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Update.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support web apps could be uninstalled successfully" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P0" id="Crosswalk_WebApp_Uninstall">
        <description>
          <pre_condition>
            1.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Uninstall.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support launch on fullscreen successfully" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P2" id="Crosswalk_WebApp_Launch_Fullscreen">
        <description>
          <pre_condition>
            1.Make sure go.wgt is installed.
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Launch_Fullscreen.html</test_script_entry>
        </description>
      </testcase>      
    </set>
  </suite>
</test_definition>
