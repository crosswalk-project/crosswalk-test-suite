<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="mbat" launcher="xwalk" name="web-mbat-tests">
    <set name="mbat" type="js">
      <testcase component="Crosswalk Runtime Binary" execution_type="manual" id="Crosswalk_Binary_Install" purpose="Validate Crosswalk install is successfull">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is push device.
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_Binary_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="manual" id="Crosswalk_Binary_Uninstall" purpose="Validate Crosswalk unistall successfull">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_Binary_Uninstall.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="manual" id="Crosswalk_tec_Install" purpose="Validate Crosswalk tec install is successfull">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is push device.
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_tec_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="manual" id="Crosswalk_tec_Uninstall" purpose="Validate Crosswalk tec unistall successfull">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_tec_Uninstall.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Integration with Tizen System" execution_type="manual" id="Crosswalk_Launch_URL" purpose="Validate if Crosswalk support launch url">
        <description>
          <pre_condition>
            1. Make sure Crosswalk application is launched and the device connected to network
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_Launch_URL.html </test_script_entry>
        </description>
      </testcase>
      <testcase component="Package Management On Tizen" execution_type="manual" id="Crosswalk_WebApp_Install" purpose="Validate if Crosswalk support to install Widget">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Package Management On Tizen" execution_type="manual" id="Crosswalk_WebApp_Launch" purpose="Validate Crosswalk support that web app could be launched successfully">
        <description>
          <pre_condition>
            1.Make sure Crosswalk application is launched
            2.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Launch.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Package Management On Tizen" execution_type="manual" id="Crosswalk_WebApp_Update" purpose="Validate if Crosswalk support to update WebApp">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Update.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Package Management On Tizen" execution_type="manual" id="Crosswalk_WebApp_Uninstall" purpose="Validate if Crosswalk support web apps could be uninstalled successfully">
        <description>
          <pre_condition>
            1.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Uninstall.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Package Management On Tizen" execution_type="manual" id="Crosswalk_WebApp_Launch_Fullscreen" purpose="Validate if Crosswalk support launch on fullscreen successfully">
        <description>
          <pre_condition>
            1.Make sure go.wgt is installed.
          </pre_condition>
          <test_script_entry>/opt/web-mbat-tests/mbat/Crosswalk_WebApp_Launch_Fullscreen.html</test_script_entry>
        </description>
      </testcase>      
    </set>
  </suite>
</test_definition>
