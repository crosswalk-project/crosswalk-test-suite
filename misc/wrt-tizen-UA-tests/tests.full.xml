<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite name="wrt-tizen-UA-tests" category="Runtime_HexGL_Gallery">
    <set name="RuntimHexGLGallery">
      <testcase purpose="Validate Crosswalk binary could be installed successfully" type="Functional" status="approved" component="RuntimeHexGLGallery" execution_type="auto" priority="P0" id="Crosswalk_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is download to local.
          </pre_condition>
          <test_script_entry test_script_expected_result="0">app_user@/opt/wrt-tizen-UA-tests/tizenua/Crosswalk_Tizen_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk binary could be launch successfully" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="auto" priority="P1" id="Crosswalk_Launch">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry test_script_expected_result="0">app_user@/opt/wrt-tizen-UA-tests/tizenua/Crosswalk_Tizen_Launch.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk binary could be exit successfully" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="auto" priority="P1" id="Crosswalk_Exit">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
            2.Make sure Crosswalk binary is launched.
          </pre_condition>
          <test_script_entry test_script_expected_result="0">app_user@/opt/wrt-tizen-UA-tests/tizenua/Crosswalk_Tizen_Exit.sh</test_script_entry>
        </description>
      </testcase>
    <testcase purpose="Validate if HexGL could be installed successfully" type="Functional" status="approved" component="Crosswalk Sample App" execution_type="auto" priority="P0" id="Crosswalk_SampleApp_HexGL_Install">
        <description>
          <pre_condition>
            1.Make sure HexGL is available.
          </pre_condition>
          <test_script_entry test_script_expected_result="0">app_user@/opt/wrt-tizen-UA-tests/tizenua/Crosswalk_SampleApp_HexGL_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if sample app HexGL could be uninstalled successfully" type="Functional" status="approved" component="Crosswalk Sample App" execution_type="auto" priority="P0" id="Crosswalk_SampleApp_HexGL_Uninstall">
        <description>
          <pre_condition>
            1.Make sure HexGL webapp is launched;
            2.Make sure HexGL webapp is available.
          </pre_condition>
          <test_script_entry test_script_expected_result="0">app_user@/opt/wrt-tizen-UA-tests/tizenua/Crosswalk_SampleApp_HexGL_Uninstall.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if sample app Gallery could be installed successfully" type="Functional" status="approved" component="Crosswalk Sample App" execution_type="auto" priority="P0" id="Crosswalk_SampleApp_Gallery_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed;
            2.Make sure WebRTC webapp is launched ;
            3.Make sure network can be used.
          </pre_condition>
          <test_script_entry test_script_expected_result="0">app_user@/opt/wrt-tizen-UA-tests/tizenua/Crosswalk_SampleApp_Gallery_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if sample app Gallery could be uninstalled successfully" type="Functional" status="approved" component="Crosswalk Sample App" execution_type="auto" priority="P0" id="Crosswalk_SampleApp_Gallery_Uninstall">
        <description>
          <pre_condition>
            1.Make sure the Gallery webapp is installed.
          </pre_condition>
          <test_script_entry test_script_expected_result="0">app_user@/opt/wrt-tizen-UA-tests/tizenua/Crosswalk_SampleApp_Gallery_Uninstall.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk binary could be uninstalled successfully" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="auto" priority="P0" id="Crosswalk_Uninstall">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry test_script_expected_result="0">app_user@/opt/wrt-tizen-UA-tests/tizenua/Crosswalk_Tizen_Uninstall.sh</test_script_entry>
        </description>
      </testcase>
   </set>
 </suite>
</test_definition>
