<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_tab_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/xwalk_des"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/line"  
        android:layout_width="match_parent"  
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="#0000FF"/>
    <LinearLayout
        android:id="@+id/result_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/result_des"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:text="Added Views Num: "/>
	    <TextView
	        android:id="@+id/result_show"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
	        android:text="0"/>
    </LinearLayout>
    <CheckBox 
        android:id="@+id/cb_yahoo"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="https://www.yahoo.com"/>
    <CheckBox 
        android:id="@+id/cb_sina"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="http://www.sina.com.cn"/>
    <CheckBox 
        android:id="@+id/cb_qq"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="http://www.qq.com"/>
    <CheckBox 
        android:id="@+id/cb_sohu"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="http://www.sohu.com"/>
    <CheckBox 
        android:id="@+id/cb_bing"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="http://cn.bing.com"/>
    <CheckBox 
        android:id="@+id/cb_w3"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="http://www.w3.org"/>
    <CheckBox 
        android:id="@+id/cb_163"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="http://www.163.com"/>
    <TextView
        android:id="@+id/views_num_des"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:text="Add Views Num: "/>
    <LinearLayout
        android:id="@+id/btns_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <EditText
	        android:id="@+id/views_num"
	        android:numeric="integer"
	        android:maxLength="3"
	        android:layout_width="80px"
	        android:layout_height="fill_parent"  
	        android:padding="5px"
	        android:singleLine="true"  
	        android:lines="1"
	        android:text="20"/>
	    <Button android:id="@+id/run_add"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="end"
	            android:text="Add Views"/>
	    <Button android:id="@+id/run_exit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="end"
	            android:text="Exit"/>
  </LinearLayout>
  <FrameLayout
        android:id="@+id/view_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TabHost
	        android:id="@+id/myTabHost"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:padding="5dp" >
	            <HorizontalScrollView
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none" >
	                <TabWidget
	                    android:id="@android:id/tabs"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content" />
	            </HorizontalScrollView>
	            <FrameLayout
	                android:id="@android:id/tabcontent"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:padding="5dp" />
	        </LinearLayout>
        </TabHost>
    </FrameLayout>
</LinearLayout>