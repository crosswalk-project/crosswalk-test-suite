#!/bin/bash

#parse params
USAGE="Usage: ./inst.sh [-i] [-u]
  -i install xpk and config environment
  -u uninstall xpk and remove source file
[-i] option was set as default."

PACKAGENAME=wrt-packagemgt-tizen-tests
XPKNAME=${PACKAGENAME}.xpk
RESOURCE_DIR=/home/app/content
chmod 777 -R $RESOURCE_DIR/tct/opt/$PACKAGENAME

function installpkg(){
    su - app -c "export XDG_RUNTIME_DIR=\"/run/user/5000\";xwalkctl --install $(dirname $0)/$XPKNAME"

    #TODO: copy resource
    #eg:cp xx $RESOURCE_DIR
}

function uninstallpkg(){
    su - app -c "export XDG_RUNTIME_DIR=\"/run/user/5000\";xwalkctl --list-apps" >/tmp/apps.txt 2>&1
    pkgids=`cat /tmp/apps.txt | grep $PACKAGENAME | awk '{print $(NF-1)}'`
    for pkgid in $pkgids
    do
        su - app -c "export XDG_RUNTIME_DIR=\"/run/user/5000\";xwalkctl --uninstall $pkgid"
    done

    #TODO: remove resource
    #eg:rm xx

    ### remove source file ###
    if [ -d $RESOURCE_DIR/tct/opt/$PACKAGENAME ];then
        rm -rf $RESOURCE_DIR/tct/opt/$PACKAGENAME
    else
        echo "Remove source file fail,please check if the source file exist: $RESOURCE_DIR/tct/opt/$PACKAGENAME ..."
    fi
}

case "$1" in
    -h|--help) echo "$USAGE"
               exit ;;
    ""|-i) installpkg;;
    -u) uninstallpkg;;
    *) echo "Unknown option: $1"
       echo "$USAGE"
       exit ;;
esac
