<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite name="wrt-rtbinauto-tizen-tests" category="Crosswalk Runtime Binary" >
    <set name="rtbinauto">
      <testcase purpose="Validate Crosswalk support 'run-as-service' mode" type="Functional" status="approved"  component="Crosswalk Runtime Binary" execution_type="auto" priority="P1" id="Crosswalk_Run_As_Service_Mode" >
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is download to local.
          </pre_condition>
          <test_script_entry>app_user@/opt/usr/media/tct/opt/wrt-rtbinauto-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Mode.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate use xwalk and xwalkctl install the same app" type="Functional" status="approved"  component="Crosswalk Runtime Binary" execution_type="auto" priority="P1" id="Crosswalk_Run_As_Service_Install" >
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry>app_user@/opt/usr/media/tct/opt/wrt-rtbinauto-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk support uninstalling apps in the 'run-as-service' mode" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="auto" priority="P1" id="Crosswalk_Run_As_Service_Uninstall" >
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry>app_user@/opt/usr/media/tct/opt/wrt-rtbinauto-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Uninstall.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate use run as service install webapp the db if correct" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="auto" priority="P2" id="Crosswalk_Run_As_Service_CheckDB" >
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is download to local.
          </pre_condition>
          <test_script_entry>app_user@/opt/usr/media/tct/opt/wrt-rtbinauto-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_CheckDB.sh</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
