<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Crosswalk WRT" name="wrt-packagemgtmanu-tizen-tests">
    <set name="packagemgtmanu" type="js">
      <testcase component="Crosswalk WRT/Package Management" execution_type="manual" id="Crosswalk_Remote_Debugging_Connection" purpose="Validate Crosswalk could debug by remote host">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_Remote_Debugging_Connection.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Package Management" execution_type="manual" id="Crosswalk_Remote_Debugging_CheckInfo" purpose="Validate Crosswalk viewed webpage could be modified by remote debug">
        <description>
          <pre_condition>
            1.Make sure Crosswalk lanunched by remote debug mode.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_Remote_Debugging_CheckInfo.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Package Management" execution_type="manual" id="Crosswalk_Remote_Debugging_Modification" purpose="Validate Crosswalk viewed webpage could be modified by remote debug">
        <description>
          <pre_condition>
            1.Make sure Crosswalk lanunched by remote debug mode.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_Remote_Debugging_Modification.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Package Management On Tizen" execution_type="manual" id="Crosswalk_WebApp_Uninstall_Resource" purpose="Validate if webapp cache file is deleted after the webapp uninstalled successfully">
        <description>
          <pre_condition>
            1.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_WebApp_Uninstall_Resource.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Package Management On Tizen" execution_type="manual" id="Crosswalk_App_Icon" purpose="Validate if web app icon display normally">
        <description>
          <pre_condition>
            1.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_App_Icon.html</test_script_entry>
        </description>
      </testcase> 
    </set>
  </suite>
</test_definition>
