<test_definition>
  <suite name="wrt-manifestmanu-android-tests" category="Runtime_Core">
    <set name="manifestextend" type="js">
      <testcase purpose="Validate if Crosswalk enable the fullscreen immersive mode by swiping down from top" type="Functional" status="approved" component="Runtime Core" execution_type="manual" priority="P1" id="Crosswalk_Fullscreen_Immersive_Top">
        <description>
          <pre_condition>
            1.Make sure CrossWalk binary is installed;
            2.Make sure device OS is Android 4.4 or above.
          </pre_condition>
          <test_script_entry>/opt/wrt-manifestmanu-android-tests/manifestmanu/Crosswalk_Fullscreen_Immersive_Top.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk enable the fullscreen immersive mode by swiping up from bottom" type="Functional" status="approved" component="Runtime Core" execution_type="manual" priority="P2" id="Crosswalk_Fullscreen_Immersive_Bottom">
