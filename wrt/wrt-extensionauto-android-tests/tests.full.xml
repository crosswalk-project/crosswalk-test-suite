<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite name="wrt-extensionauto-android-tests" category="Extension_System">
    <set name="extension">
      <testcase purpose="Validate if Crosswalk support the external extension install in the embedded mode" type="Functional" status="approved" component="Extension System" execution_type="auto" priority="P1" id="Crosswalk_EmbeddedMode_Extension_Install">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/home/app/content/opt/wrt-extensionauto-android-tests/extension/Crosswalk_EmbeddedMode_Extension_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support the external extension launch in the embedded mode" type="Functional" status="approved" component="Extension System" execution_type="auto" priority="P2" id="Crosswalk_EmbeddedMode_Extension_Launch_viaTerminal">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/home/app/content/opt/wrt-extensionauto-android-tests/extension/Crosswalk_EmbeddedMode_Extension_Launch_viaTerminal.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support the external extension uninstall in the embedded mode" type="Functional" status="approved" component="Extension System" execution_type="auto" priority="P1" id="Crosswalk_EmbeddedMode_Extension_Uninstall_viaTerminal">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/home/app/content/opt/wrt-extensionauto-android-tests/extension/Crosswalk_EmbeddedMode_Extension_Uninstall_viaTerminal.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support the external extension close in the embedded mode" type="Functional" status="approved" component="Extension System" execution_type="auto" priority="P2" id="Crosswalk_EmbeddedMode_Extension_Close_viaTerminal">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/home/app/content/opt/wrt-extensionauto-android-tests/extension/Crosswalk_EmbeddedMode_Extension_Close_viaTerminal.sh</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support the external extension in the embedded mode with runtimelib uninstall" type="Functional" status="approved" component="Extension System" execution_type="auto" priority="P1" id="Crosswalk_EmbeddedMode_Extension_XwalkRuntimeLibUninstall_viaTerminal">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/home/app/content/opt/wrt-extensionauto-android-tests/extension/Crosswalk_EmbeddedMode_Extension_XwalkRuntimeLibUninstall_viaTerminal.sh</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
